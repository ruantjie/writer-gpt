{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@interface/*": ["interface/*"],
      "@constants/*": ["constants/*"],
      "@ui/*": ["components/ui/*"],
      "@service/*": ["service/*"],
      "@config/*": ["config/*"],
      "@styles/*": ["styles/*"],
      "@assets/*": ["assets/*"],
      "@store/*": ["store/*"],
      "@hooks/*": ["hooks/*"],
      "@data/*": ["data/*"],
      "@app/*": ["app/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
